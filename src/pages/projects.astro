---
import PageHead from "@/components/PageHead.astro";
import Section from "@/components/Section.astro";
import Layout from "@/layouts/Layout.astro";

const currentUrl = Astro.url;

const projects = [
	{
		title: "Project 1",
		description: "Description for project 1",
		image: "/images/project1.jpg",
	},
	{
		title: "Project 2",
		description: "Description for project 2",
		image: "/images/project2.jpg",
	},
	{
		title: "Project 3",
		description: "Description for project 3",
		image: "/images/project3.jpg",
	},
];
---

<Layout canonicalUrl={currentUrl} title="Projects">
	<PageHead slot="head" title="Projects" />

	<Section>
		<h1 class="text-4xl font-bold">Projects</h1>

		<div
			class="py-sm mb-16 grid grid-cols-1 gap-x-8 gap-y-8 sm:grid-cols-2"
		>
			{
				projects.map((project, _) => (
					<div class="group h-full w-full transition-all duration-300 hover:translate-y-[-4px] even:sm:mt-14">
						<div class="aspect-[16/10] w-full overflow-hidden" />
					</div>
				))
			}
		</div>
	</Section>
</Layout>
